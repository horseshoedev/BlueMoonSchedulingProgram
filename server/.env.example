# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (Development/Local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bluemoon_scheduler_dev
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Database Configuration (Production - use DATABASE_URL instead)
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_SSL=true

# Encryption Key for OAuth Tokens (Generate with: node -e "console.log(crypto.randomBytes(32).toString('base64'))")
ENCRYPTION_KEY=your_base64_encryption_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/calendar/google/callback

# Email Configuration (for meeting proposals)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@bluemoonscheduler.com

# Optional: Query Logging
LOG_QUERIES=false

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
